<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity1">

    <!-- Header -->
    <TextView
        android:id="@+id/homeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to HikeHub"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Update Details Button -->
    <Button
        android:id="@+id/updateDetailsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Update Details"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/homeHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Go to Shop Button -->
    <Button
        android:id="@+id/goToShopButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Go to Shop"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/updateDetailsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Go to Maps Button -->
    <Button
        android:id="@+id/goToMapsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Find Trails on Map"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/goToShopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wallet Button -->
    <Button
        android:id="@+id/walletButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Wallet"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/goToMapsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:text="Logout"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@color/colorOnSecondary"
        app:layout_constraintTop_toBottomOf="@id/walletButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
