<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.List7" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Green for nature/hiking). -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color (Brown for earthy tones). -->
        <item name="colorSecondary">#8D6E63</item>
        <item name="colorSecondaryVariant">#5D4037</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background and surface colors. -->
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorSurface">#F5F5F5</item>
        <item name="colorOnSurface">#212121</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color for consistency. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Typography customization.
        <item name="android:fontFamily">@font/roboto</item> -->

        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/RoundedCorners</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundedCorners</item>
    </style>

    <!-- Rounded corners style -->
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
